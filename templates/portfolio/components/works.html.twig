                            <p class="mb-2 text-base text-neutral-500 dark:text-neutral-300">
                                {{ portfolio.description }}
                            </p>

                            {% for skill_used in portfolio.skills %}
                                <div class="font-mono inline-block whitespace-nowrap rounded-full bg-orange-500 px-4 pb-[0.45em] pt-[0.35em] text-center align-baseline text-[0.75em] font-bold leading-none text-white">
                                    {{ skill_used }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
