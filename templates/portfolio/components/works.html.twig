<!-- Works Section -->
<section id="works_section" class="bg-neutral-200 py-12">
    <div class="container mx-auto">
        <div class="w-full p-6">
            <h2 class="text-2xl font-semibold text-center">Works</h2>

            <!-- Portfolio Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">

                {% for portfolio in new_works %}
                    <!-- Card -->
                    <div class="block rounded-lg bg-white shadow-2xl dark:bg-neutral-700 text-center">
                        <!-- Card image -->
                        <div class="rounded-t-lg h-80 overflow-hidden" data-te-lightbox-init>
                            <img
                                    src="{{ asset('/images/' ~ portfolio.image) }}"
                                    data-te-img="{{ asset('/images/' ~ portfolio.image) }}"
                                    alt="{{ "Jan Ivan Orpilla Portfolio " ~ portfolio.name }}"
                                    class="cursor-zoom-in data-[te-lightbox-disabled]:cursor-auto"
                            />
                        </div>
                        <!-- Card header -->
                        <div class="border-b-2 border-neutral-100 px-6 py-4 dark:border-neutral-500">
                            <h5 class="flex items-center justify-between dark:text-neutral-300 text-black">
                                {{ portfolio.name }}
                                <div class="inline-block">
                                    {% if portfolio.github_url is defined and portfolio.github_url is not empty %}
                                        <a href="{{ portfolio.github_url }}" class="mr-2" target="_blank"><i
                                                    class="fa-brands fa-github text-2xl"></i></a>
                                    {% endif %}
                                    <a href="{{ portfolio.url }}" target="_blank"><i
                                                class="fa-solid fa-arrow-up-right-from-square text-2xl"></i></a>
                                </div>
                            </h5>
                        </div>

                        <!-- Card body -->
                        <div class="p-6">
                            <!-- Text -->
                            <p class="mb-2 text-base text-neutral-500 dark:text-neutral-300">
                                {{ portfolio.description }}
                            </p>

                            {% for skill_used in portfolio.skills %}
                                <div class="font-mono inline-block whitespace-nowrap rounded-full bg-orange-500 px-4 pb-[0.45em] pt-[0.35em] text-center align-baseline text-[0.75em] font-bold leading-none text-white">
                                    {{ skill_used }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
                {% for key, portfolio in works_carousel %}
                    <!-- Card -->
                    <div class="block rounded-lg bg-white shadow-2xl dark:bg-neutral-700 text-center">
                        <!-- Carousel start -->
                        <div
                                id="carousel_{{ key }}"
                                class="relative"
                                data-te-carousel-init
                                data-te-ride="carousel">
                            <!--Carousel indicators-->
                            <div
                                    class="absolute bottom-0 left-0 right-0 z-[2] mx-[15%] mb-4 flex list-none justify-center p-0"
                                    data-te-carousel-indicators>
                                {% for image_key, image in portfolio.image %}
                                <button
                                        type="button"
                                        data-te-target="#carousel_{{ key }}"
                                        data-te-slide-to="{{ image_key }}"
                                        {% if image_key == 0 %}
                                            data-te-carousel-active
                                        {% endif %}
                                        class="mx-[3px] box-content h-[3px] w-[30px] flex-initial cursor-pointer border-0 border-y-[10px] border-solid border-transparent bg-orange-500 bg-clip-padding p-0 -indent-[999px] opacity-50 transition-opacity duration-[600ms] ease-[cubic-bezier(0.25,0.1,0.25,1.0)] motion-reduce:transition-none"
                                        aria-current="true"
                                        aria-label="Slide {{ image_key }}"
                                ></button>

                                {% endfor %}
                            </div>

                            <!--Carousel items-->
                            <div class="relative w-full overflow-hidden after:clear-both after:block after:content-['']"
                                 data-te-lightbox-init>

                                {% for image_key, image in portfolio.image %}
                                    <div
                                            class="                                            rounded-t-lg h-80 overflow-hidden
 relative float-left -mr-[100%] {% if image_key != 0 %} hidden {% endif %}  w-full transition-transform duration-[600ms] ease-in-out motion-reduce:transition-none"
                                            data-te-carousel-item
                                            {% if image_key == 0 %}
                                                data-te-carousel-active
                                            {% endif %}

                                    >
                                        <img
                                                src="{{ asset('/images/' ~ image) }}"
                                                class="block w-full"
                                                alt="Jan Ivan Orpilla Portfolio {{ key }}"

                                                data-te-img="{{ asset('/images/' ~ image) }}"
                                                class="w-full cursor-zoom-in data-[te-lightbox-disabled]:cursor-auto"
                                        />
                                    </div>
                                {% endfor %}
                            </div>

                            <!--Carousel controls - prev item-->
                            <button
                                    class="absolute bottom-0 left-0 top-0 z-[1] flex w-[15%] items-center justify-center border-0 bg-none p-0 text-center text-white opacity-50 transition-opacity duration-150 ease-[cubic-bezier(0.25,0.1,0.25,1.0)] hover:text-white hover:no-underline hover:opacity-90 hover:outline-none focus:text-white focus:no-underline focus:opacity-90 focus:outline-none motion-reduce:transition-none"
                                    type="button"
                                    data-te-target="#carousel_{{ key }}"
                                    data-te-slide="prev">
                                    <span class="inline-block h-8 w-8">
                                      <svg
                                              xmlns="http://www.w3.org/2000/svg"
                                              fill="none"
                                              viewBox="0 0 24 24"
                                              stroke-width="1.5"
                                              stroke="currentColor"
                                              class="h-6 w-6">
                                        <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M15.75 19.5L8.25 12l7.5-7.5"/>
                                      </svg>
                                    </span>
                                <span
                                        class="!absolute !-m-px !h-px !w-px !overflow-hidden !whitespace-nowrap !border-0 !p-0 ![clip:rect(0,0,0,0)]"
                                >Previous</span
                                >
                            </button>
                            <!--Carousel controls - next item-->
                            <button
                                    class="absolute bottom-0 right-0 top-0 z-[1] flex w-[15%] items-center justify-center border-0 bg-none p-0 text-center text-white opacity-50 transition-opacity duration-150 ease-[cubic-bezier(0.25,0.1,0.25,1.0)] hover:text-white hover:no-underline hover:opacity-90 hover:outline-none focus:text-white focus:no-underline focus:opacity-90 focus:outline-none motion-reduce:transition-none"
                                    type="button"
                                    data-te-target="#carousel_{{ key }}"
                                    data-te-slide="next">
                                    <span class="inline-block h-8 w-8">
                                      <svg
                                              xmlns="http://www.w3.org/2000/svg"
                                              fill="none"
                                              viewBox="0 0 24 24"
                                              stroke-width="1.5"
                                              stroke="currentColor"
                                              class="h-6 w-6">
                                        <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
                                      </svg>
                                    </span>
                                <span
                                        class="!absolute !-m-px !h-px !w-px !overflow-hidden !whitespace-nowrap !border-0 !p-0 ![clip:rect(0,0,0,0)]"
                                >Next</span
                                >
                            </button>
                        </div>
                        <!-- Card header -->
                        <div class="border-b-2 border-neutral-100 px-6 py-4 dark:border-neutral-500">
                            <h5 class="flex items-center justify-between dark:text-neutral-300 text-black">
